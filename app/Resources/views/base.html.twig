<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}TEST STS !{% endblock %}</title>
        {% block stylesheets %}
            <!-- Bootstrap & Bootstrap add-ons & global css // see app\config\config.yml for src file path -->
            <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <!-- nav -->
        {% set route = app.request.attributes.get('_route') %}
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand {{ route ==  'index' ? ' active' }}" href="{{ path('index') }}">
                         <span class=" glyphicon glyphicon-home" aria-hidden="true"></span> TEST STS
                    </a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li {{ route ==  'list' ? 'class="active"' }}>
                            <a href="{{ path('list') }}">
                                <span class="glyphicon glyphicon-list" aria-hidden="true"></span> List
                            </a>
                        </li>
                        <li {{ route ==  'add' ? 'class="active"' }}>
                            <a href="{{ path('add') }}">
                                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add
                            </a>
                        </li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </nav>

        {% block body %}
        {% endblock %}

        <!-- footer -->
        <footer class="footer">
            <div class="container">
                <p class="text-muted"><span class="glyphicon glyphicon-copyright-mark" aria-hidden="true"></span> s.michel.freelance@gmail.com</p>
            </div>
        </footer>

        {% block javascripts %}
            <!-- jQuery (necessary for Bootstraps JavaScript plugins) -->
            <script src="{{ asset('js/jquery.js') }}"></script>
            <!-- JavaScripts, compiled by Assetic // see app\config\config.yml for src file path -->
            <script src="{{ asset('js/bootstrap.js') }}"></script>
        {% endblock %}
    </body>
</html>
